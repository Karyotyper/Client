<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_menu_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/order_menu_item_selection_pointer"
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="match_parent"
        android:background="#cccccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/order_menu_item_selection_pointer"
        android:padding="10dip">

        <ImageView
            android:id="@+id/image_food"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/curry" />

        <TextView
            android:id="@+id/order_menu_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/image_food"
            android:text="Item Name"
            android:textSize="26sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_menu_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/image_food"
            android:text="Price"
            android:textColor="@color/color_food_price"
            android:textSize="20sp" />

        <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"/>

    </RelativeLayout>
</RelativeLayout>